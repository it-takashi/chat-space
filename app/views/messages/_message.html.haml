.main-chat__message-list__box{data: {message: {id: message.id}}}
  .main-chat__message-list__box__comment-info
    .main-chat__message-list__box__comment-info__name
      = message.user.name
    .main-chat__message-list__box__comment-info__day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__box__comment
    - if message.content.present?
      %p
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?